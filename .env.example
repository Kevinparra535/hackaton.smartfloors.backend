# Puerto del servidor
PORT=3000

# Ambiente
NODE_ENV=development

# Configuración CORS
CORS_ORIGIN=http://localhost:5173

# Configuración de simulación
SIMULATION_INTERVAL=60000
NUMBER_OF_FLOORS=5
BUILDING_NAME=Edificio Principal

# Configuración de EmailJS
# Obtener credenciales en: https://www.emailjs.com/
EMAIL_NOTIFICATIONS_ENABLED=false
EMAILJS_SERVICE_ID=your_service_id_here
EMAILJS_PUBLIC_KEY=your_public_key_here
EMAILJS_PRIVATE_KEY=your_private_key_here

# IDs de plantillas de EmailJS (crear en dashboard)
EMAILJS_TEMPLATE_CRITICAL=template_critical
EMAILJS_TEMPLATE_WARNING=template_warning
EMAILJS_TEMPLATE_INFO=template_info
EMAILJS_TEMPLATE_SUMMARY=template_summary

# Destinatarios de emails (separados por comas)
EMAIL_RECIPIENTS_CRITICAL=admin@example.com,manager@example.com
EMAIL_RECIPIENTS_WARNING=admin@example.com
EMAIL_RECIPIENTS_INFO=notifications@example.com
EMAIL_RECIPIENTS_ADMIN=admin@example.com

# Configuración de rate limiting
EMAIL_MAX_PER_MINUTE=5
EMAIL_COOLDOWN_MINUTES=15
